<%- include('partials/_header') %> 
<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-border table-hover">
                <thead>
                    <tr>
                        <th>NÂ°</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Age</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(data) { %>
                        <% for(var i = 0; i < data.length; i ++) { %>
                            <tr>
                                <td><%= i + 1 %></td>
                                <td><%= data[i].name %></td>
                                <td><%= data[i].correo %></td>
                                <td><%= data[i].edad %></td>
                                <td>
                                    <a href="/delete/<%= data[i].id %>" class="btn btn-danger">DELETE</a>
                                    <a href="/update/<%= data[i].id %>" class="btn btn-success">UPDATE</a>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="col-md-5" >
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="post">
                        <div class="form-group m-2">
                            <input type="text" name="name" placeholder="Name" class="form-control">
                        </div>
                        <div class="form-group m-2">
                            <input type="text" name="correo" placeholder="Email" class="form-control">
                        </div>
                        <div class="form-group m-2">
                            <input type="text" name="edad" placeholder="Age" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            CREAR CUENTA
                        </button>
                    </form>
                </div>
                </div>
            </div>
    </div>
</div>
<%- include('partials/_footer') %> 